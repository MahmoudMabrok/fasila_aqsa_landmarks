<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/Theme.App</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.App.Toolbar</item>
    </style>

    <style name="TextAppearance.Widget.App.Toolbar" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:fontFamily">@font/el_messiri_bold</item>
        <item name="android:textSize">25sp</item>
    </style>


    <style name="CornerCut" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
    </style>


    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textAppearance">@font/el_messiri_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MaterialAlertDialog.App.Item">
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@color/button_color</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">21dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">9dp</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/TextColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/TextColorPrimary</item>
        <item name="android:textColorHint">@color/TextColorPrimary</item>


    </style>>

    <style name="TextAppearance.App.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="PopupMenu" parent="Theme.MaterialComponents.CompactMenu">
        <item name="android:popupBackground">@color/backgroundColor</item>
    </style>

</resources>